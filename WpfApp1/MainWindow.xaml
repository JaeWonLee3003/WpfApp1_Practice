<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="plus" Content="+" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="81" Click="plus_Click" Margin="152,111,0,0" Grid.Column="1" FontSize="24" FontFamily="Arial Black"/>
        <Button x:Name="minus" Content="-" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="81" Click="minus_Click" Margin="259,111,0,0" Grid.Column="1" FontSize="24" FontFamily="Arial Black"/>
        <TextBox x:Name="numbox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="40" Margin="400,120,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="151" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
