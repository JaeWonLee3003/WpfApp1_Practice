        <local:LadderSet HorizontalAlignment="Left" Margin="300,113,0,0" VerticalAlignment="Top"/>
        <StackPanel Background="#FFBEFFE0" Margin="354,147,460,231" RenderTransformOrigin="0.495,-1.008">

